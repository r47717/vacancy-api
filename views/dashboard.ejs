<h1>Dashboard</h1>

<h2>Companies</h2>

<% if (companies.length > 0) { %>
  <ul>
    <% companies.forEach(function(c){ %>
      <li>
        <a href="/company/show/<%= c.id %>">
          <%= c.title %>
        </a> 
      </li>
    <% }); %>
  </ul>
<% } else { %>
  <emp>No companies</emp>
<% } %>

<a href="/company/new">Create new company</a>

<form action="/company/load-hh" method="post">
  <button type="submit">Load companies from HH</button>
</form>

<form action="/company/delete-all" method="post">
  <button type="submit">Delete all companies</button>
</form>

<h2>Vacancies</h2>

<% if (vacancies.length > 0) { %>
  <ul>
    <% vacancies.forEach(function(v){ %>
      <li>
        <a href="/vacancy/show/<%= v.id %>">
          <%= v.title %>
        </a>
    <% }); %>
  </ul>
<% } else { %>
  <emp>No vacancies</emp>
<% } %>

<a href="/vacancy/new">Create new vacancy</a>

<form action="/vacancy/load-hh" method="post">
  <button type="submit">Load vacancies from HH</button>
</form>

<form action="/vacancy/delete-all" method="post">
  <button type="submit">Delete all vacancies</button>
</form>

<h2>Vacancies by keyword</h2>

<form action="/submit-keyword" method="post">
  <input type="text" value="<%= keyword %>" name="keyword">
  <button type="submit">Submit</button>
</form>

<table>
  <thead>
    <tr>Vacancy id</tr>
    <tr>Vacancy title</tr>
    <tr>Company name</tr>
  </thead>
  <tbody>
    <% byKeyword.forEach(function(item){ %>
      <tr>
        <td><%= item.vid %></td>
        <td>
          <a href="/vacancy/show/<%= item.vid %>">
            <%= item.vtitle %>
          </a>
        </td>
        <td>
          <a href="/vacancy/show/<%= item.cid %>">
            <%= item.ctitle %>
          </a>
        </td>
      </tr>
      <tr>
    <% }); %>
  </tbody>
</table>


<h2>Summary (HH only)</h2>

<table>
  <thead>
    <tr>company id</tr>
    <tr>company title</tr>
    <tr>No of vacancies</tr>
  </thead>
  <tbody>
    <% summary.forEach(function(item){ %>
      <tr>
        <td><%= item.id %></td>
        <td>
          <a href="/company/show/<%= item.id %>">
            <%= item.title %>
          </a>
        </td>
        <td>
          <%= item.count %>
        </td>
      </tr>
      <tr>
    <% }); %>
  </tbody>
</table>

